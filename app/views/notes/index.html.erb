<p id="notice"><%= notice %></p>

<h1> Notes </h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th colspan="3"></th>
        </tr>
    </thead>
      <tbody>
        <% @notes.each do |note| %>
         <tr>
             <td><%= note.title %></td>
             <td><%= note.text %></td>
             <td><%= note.published %></td>
             <td><%= link_to "Show", note %></td>
             <td><%= link_to "Edit", edit_note_path(note) %></td>
             <td><%= link_to "Destroy", note, method: :delete,
                 data: { confirm: 'are you sure?' }%></td>
         </tr>
      <% end %>
      </tbody>
</table>
<br>


<%= link_to 'new note', new_note_path %>
